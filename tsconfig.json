{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"target": "es2022",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"moduleDetection": "force",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2021"
		],
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
